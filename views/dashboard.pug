extends ./layout

block content
  .container-fluid.p-3
    .row
      .col-md-3.text-left
        span.text-info bittrader 
        br
        small.text-light=fn.version
      .col-md-3.text-right.offset-md-6
        span.text-light.font-italic=fn.username
        br
        a.text-danger(href='/logout' role='button') Logout
    .row
      .col-md-9
        .card.card-body
          a.btn.btn-warning(data-toggle='collapse' href='#signals' role='button' aria-expanded='true' aria-controls='signals') # Signals (Last 50) #
          #signals.collapse.show.table-responsive
            include partials/signals   
      .col-md-3
        .card.card-body
          a.btn.btn-success(data-toggle='collapse' href='#balances' role='button' aria-expanded='true' aria-controls='balances') # Balances #
          #balances.collapse.show.table-responsive
            include partials/balances
    .row
      .col-md-12
        .card.card-body
          a.btn.btn-primary(data-toggle='collapse' href='#orders' role='button' aria-expanded='true' aria-controls='orders') # Orders #
          #orders.collapse.show.table-responsive
            include partials/orders
      

        